/** Classic blocks world actions. */

(inPackage "lisp.user")

(defpredicate clear ?b1)
(defpredicate ontable ?b1)
(defpredicate on ?b1 ?b2)

(defaction stack
	[precondition (clear ?a) (clear ?b)]
	; Also need (not (same ?a ?b))
	[postcondition (on ?a ?b)
				   (not (ontable ?a))
				   (not (clear ?b))
				   ])


(defaction unstack
	[precondition (clear ?a) (on ?a ?b)]
	[postcondition
	    (not (on ?a ?b))
	    (clear ?b)
	    (ontable ?a)])
